// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id String @id @default(uuid())

  nome  String
  senha String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("usuario")
}

model Produtos {
  id String @id @default(uuid())

  nome   String
  desc   String
  banner String
  preco  String
  quant  String?
  status String

  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("produto")
}

model Funcionarios {
  id    String @id @default(uuid())
  nome  String
  senha String
  cpf   String

  setor   Setor  @relation(fields: [setorId], references: [id])
  setorId String

  Pedidos   Pedidos[]
  PedidoADM PedidoADM[]

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("funcionario")
}

model Pedidos {
  id   String @id @default(uuid())
  mesa String

  funcionario   Funcionarios @relation(fields: [funcionarioId], references: [id])
  funcionarioId String

  item1  String
  quant1 String
  item2  String
  quant2 String
  item3  String
  quant3 String
  item4  String
  quant4 String
  item5  String
  quant5 String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("pedido")
}

model PedidoADM {
  id   String @id @default(uuid())
  mesa String

  funcionario   Funcionarios @relation(fields: [funcionarioId], references: [id])
  funcionarioId String

  item1  String
  quant1 String
  item2  String
  quant2 String
  item3  String
  quant3 String
  item4  String
  quant4 String
  item5  String
  quant5 String

  status String

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("pedidoadm")
}

model Categoria {
  id   String @id @default(uuid())
  nome String

  Produtos Produtos[]

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("categoria")
}

model Setor {
  id   String @id @default(uuid())
  nome String

  Funcionarios Funcionarios[]

  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("setor")
}
